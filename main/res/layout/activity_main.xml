<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#575350"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="30dp"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/textWindow"
        android:background="#E3D8D0"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="X"
            android:textSize="35dp"
            android:textStyle="bold"
            android:id="@+id/BtnMul"
            android:background="#D3CAC3"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="3"
            android:textSize="35dp"
            android:textStyle="bold"
            android:id="@+id/Btn3"
            android:background="#746F6B"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="35dp"
            android:textStyle="bold"
            android:id="@+id/Btn2"
            android:background="#746F6B"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="1"
            android:textSize="35dp"
            android:textStyle="bold"
            android:id="@+id/Btn1"
            android:background="#746F6B"
            android:layout_margin="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="-"
            android:textSize="35dp"
            android:textStyle="bold"
            android:id="@+id/BtnSub"
            android:background="#D3CAC3"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="6"
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="#746F6B"
            android:id="@+id/Btn6"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="5"
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="#746F6B"
            android:id="@+id/Btn5"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="4"
            android:textSize="35dp"
            android:textStyle="bold"
            android:id="@+id/Btn4"
            android:background="#746F6B"
            android:layout_margin="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="+"
            android:textSize="35dp"
            android:textStyle="bold"
            android:id="@+id/BtnAdd"
            android:background="#D3CAC3"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="9"
            android:textSize="35dp"
            android:textStyle="bold"
            android:id="@+id/Btn9"
            android:background="#746F6B"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="35dp"
            android:textStyle="bold"
            android:id="@+id/Btn8"
            android:background="#746F6B"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="7"
            android:textSize="35dp"
            android:textStyle="bold"
            android:id="@+id/Btn7"
            android:background="#746F6B"
            android:layout_margin="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="/"
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="#D3CAC3"
            android:id="@+id/BtnDiv"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="#D3CAC3"
            android:id="@+id/BtnEq"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="0"
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="#746F6B"
            android:id="@+id/Btn0"
            android:layout_margin="15dp"/>

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="C"
            android:textSize="35dp"
            android:textStyle="bold"
            android:background="#D8640F"
            android:id="@+id/BtnClr"
            android:layout_margin="15dp"/>
    </LinearLayout>
</LinearLayout>